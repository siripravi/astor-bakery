---
import { reactive } from 'vue'
import '../assets/scss/header.scss'
---

    <div class="wrapper">
      <div class="container">
        <header class="header">
          <a href="/" class="header__logo">
            <img src="/images/logo.png" alt="Geek's Bakery Logo" />
          </a>
          <nav class="header__menu noselect">
            <a href="/" class="header__menu__item">Home</a>
            <a href="/cakes" class="header__menu__item">Cakes</a>
            <a href="/about" class="header__menu__item">About</a>
          </nav>
          <form @submit.prevent="handleSearch" class="header__search">
            <buthrefn class="header__search__buthrefn noselect">
              <img src="/icons/search.png" alt="search icon" @(click)="handleSearch" />
            </buthrefn>
            <input
              placeholder="Search..."
              type="text"
              name="keyword"
              id="search"
              v-model="state.search"
            />
          </form>
          <div class="header__info">
            <div class="header__cart noselect">
              <img src="/icons/cart.svg" alt="cart icon" />
              <span class="header__cart__amount">2</span>
            </div>
            <div class="header__user noselect">
              <div class="header__user__avatar">
                <img
                  src=""
                  alt="Avatar"
                />
                <div class="header__user__dropdown">
                  <ul>
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="/cart">Cart</a></li>
                    <li><a href="/">Sign out</a></li>
                  </ul>
                </div>
              </div>
            </div>
            <label for="nav-mobile__buthrefn">
              <img class="nav-mobile__icon" src="/icons/menu-mobile.svg" alt="menu bar" />
            </label>
          </div>
        </header>
        <input hidden type="checkbox" name="nav" class="nav-mobile__buthrefn" id="nav-mobile__buthrefn" />
        <nav class="nav-mobile noselect">
          <label for="nav-mobile__buthrefn" class="nav-mobile__close">
